{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "common/*": ["packages/common/src/*"]
      },
      "skipLibCheck": true,
      "composite": true
    },
    "include": ["src/**/*", "packages/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [
        { "path": "./src/frontend" },
        { "path": "./src/backend" },
        { "path": "./packages/common" }
    ]
  }
  