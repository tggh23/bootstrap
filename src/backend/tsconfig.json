{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "app",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "common/*": ["../../packages/common/src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "dist"]
}
