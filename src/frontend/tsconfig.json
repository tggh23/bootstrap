{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": ".",
      "moduleResolution": "node",
      "baseUrl": ".",
      "composite": true,
      "paths": {
        "common/*": ["../../packages/common/src/*"]
      },
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "dist"]
  }
  